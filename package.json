{
  "name": "sclean",
  "version": "0.1.0",
  "main": "lib/index.js",
  "bin": "bin/sclean.js",
  "description": "A tool to clean obsolete hash-coded files, which created by building tools, like webpack, gulp.",
  "repository": {
    "type": "git",
    "url": "https://github.com/senntyou/sclean"
  },
  "keywords": [
    "web",
    "frontend",
    "build",
    "tool",
    "gulp",
    "webpack",
    "clean",
    "obsolete",
    "redundant"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/senntyou/sclean/issues"
  },
  "homepage": "https://github.com/senntyou/sclean",
  "readmeFilename": "README.md",
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "precommit": "npm run lint-staged",
    "prettier": "prettier --write ./**/*.{js,json,md}",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "build": "rollup -c",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build",
    "test": "jest test",
    "test:base": "jest test/base.test.js"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^2.19.0",
    "decompress": "^4.2.0",
    "del": "^3.0.0",
    "glob": "^7.1.3",
    "gulp": "^4.0.0",
    "gulp-zip": "^4.2.0",
    "inquirer": "^6.2.0",
    "ora": "^3.0.0",
    "recursive-readdir": "^2.2.2"
  },
  "devDependencies": {
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.23.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.7.0",
    "fs-extra": "^7.0.0",
    "husky": "^1.0.1",
    "istanbul": "^0.4.5",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "rd": "^2.0.1",
    "rollup": "^0.66.2",
    "rollup-plugin-json": "^3.1.0"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "**/*.{md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
